---
export interface Props {
    text:string;
}

const { text } = Astro.props as Props;
---

<div class="typing-container">{text}</div>

<style>
  .typing-container {
    overflow: hidden;
    white-space: nowrap;
    border-right: 0.15em solid #000; /* Adjust the color and thickness as needed */
    animation: typing-animation 2s steps(40) infinite;
  }

  @keyframes typing-animation {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }
</style>



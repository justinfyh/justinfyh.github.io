---
title: "Astro Parallax Example"
import Header from "./Header.astro";
import Introduction from "./Introduction.astro";
---

<astro-fragment>
  <div class="container">
    <div class="overlay">
        <div class="tint">
            <div class="header-container"><Header /></div>
            <div class="content"><Introduction /></div>
            <div class="scroll"><p>Scroll Down</p></div>
        </div>
    </div>
</div>
</astro-fragment>


<style>
    .container {
        max-width: 100%;
        margin: 0;
        height: 100vh;
        width: 100vw;
        text-align: center;
        font-size: 2em;
        scroll-margin-top: 50vh;
        position: relative
    }

    .header-container {
        top: 0;
        position: absolute;
        width: 100%;
        max-width: 100%;
    }

    .overlay {
        background: url('../images/screen2.jpg') no-repeat top fixed;
        background-size: cover;
        background-position: top;
        position: absolute;
        width: 100%;
    }

    .tint {
        background-color: var(--tint);
        height: 100vh;
        transition: background-color 0.3s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .scroll {
        font-size: 1.3rem;
        position: absolute;
        bottom: 2em; 
        text-align: center;
        width: 100%;
    }

  </style>
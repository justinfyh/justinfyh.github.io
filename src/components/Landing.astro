---
title: "Astro Parallax Example"
import Header from "./Header.astro";
import Introduction from "./Introduction.astro";
---

<astro-fragment>
  <div class="container">
    <div class="overlay">
        <div class="tint">
            <div class="header-container"><Header /></div>
            <div class="content"><Introduction /></div>
        </div>
    </div>
</div>
</astro-fragment>


<style>
    .container {
        max-width: 100%;
        margin: 0;
        height: 100vh;
        width: 100vw;
        align-items: center;
        justify-content: center;
        text-align: center;
        font-size: 2em;
        scroll-margin-top: 50vh;
    }

    .header-container {
        top: 0;
        height: 5em;
    }

    .overlay {
        background: url('../images/screen.jpg') no-repeat center fixed;
        background-size: cover;
        background-position: center;
        position: absolute;
        width: 100%;
    }

    .tint {
        background-color: var(--tint);
        height: 100vh;
        transition: background-color 0.3s ease-in-out;
    }

  </style>
---
import Header from "./Header.astro";
import Introduction from "./Introduction.astro";
import down from "../images/down-arrow.png"
---

<section id="section1" class="container">
    <div class="overlay">
        <div class="tint">
            <div class="header-container"><Header /></div>
            <div class="content"><Introduction /></div>
            <div class="scroll"><a href="#section2"><img src={down.src} alt=""></a></div>
        </div>
    </div>
</section>

<style>
    .container {
        max-width: 100%;
        margin: 0;
        height: 100vh;
        width: 100vw;
        text-align: center;
        font-size: 2em;
        scroll-margin-top: 50vh;
        position: relative
    }

    .header-container {
        top: 0;
        position: absolute;
        width: 100%;
        max-width: 100%;
    }

    .overlay {
        background: url('../images/screen2.jpg') no-repeat top fixed;
        background-size: cover;
        background-position: top;
        position: absolute;
        width: 100%;
    }

    .tint {
        background-color: var(--tint);
        height: 100vh;
        transition: background-color 0.3s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .scroll {
        font-size: 1rem;
        position: absolute;
        bottom: 1em;
        cursor: pointer;
        padding: 1em 1.2em;
    }

    .scroll a {
        text-decoration: none;
        color: #fff;
    }

    .scroll img {
        margin: 0;
        height: 2.5em;
        transition: height 0.1s ease-in-out;
    }

    .scroll img:hover {
        height: 3em;
        transition: height 0.1s ease-in-out;
    }
  </style>
---
import download from '../images/download.png'
import resume from '../documents/resume-justin-huang.pdf'
---

<div class="container1">
    <div class="box">
        
        <a href={ resume } download>
            <div class="img-container bg-slate-800">
            <img src={ download.src } alt="">
                <p>Download resume</p>
        </div>
        </a>
    </div>
</div>

<style>
    .container1 {
        height: auto;
        background: var(--gradient);
        display: flex;
        justify-content: center;
        padding: 5em 0 2em 0;
    }

    .box {
        background-color: var(--secondary);
        width: 60%;
        margin: auto;
        border-radius: 10px;
        padding: 3em 3em;
        text-align: center;
        box-shadow: 0 0 8px var(--shadow);

    }

    @media(max-width: 1320px) {
		.box {
			width: 65%;
		}
	}

	@media(max-width: 880px) {
		.box {
			width: 70%;
		}
	}

    .gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    p {
        font-size: 1.1rem;
        margin-left: 1em;
    }

    a {
        color: white;
    }

    img {
        height: 25px;
    }

    .img-container {
        /* background-color: rgb(var(--accent-dark)); */
        border-radius: 10px;
        padding: 1.3em;
        width: fit-content;
        margin: auto;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .img-container:hover {
        box-shadow: 0 0 8px var(--shadow);
        transition: box-shadow 0.2s ease-in-out;
    }
</style>
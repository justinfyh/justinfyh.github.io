<div class="hamburger">
  <span class="line line1"></span>
  <span class="line line2"></span>
  <span class="line line3"></span>
</div>

<style>
  .hamburger {
    cursor: pointer;
    margin-top: 7px;
  }

  .hamburger .line {
    display: block;
    width: 30px;
    height: 3px;
    margin-bottom: 7px;
    background-color: var(--text);
    transition: transform 0.3s ease;
  }

  .expanded .line1 {
    transform: rotate(-45deg) translate(-7px, 6px);
  }

  .expanded .line2 {
    opacity: 0;
  }

  .expanded .line3 {
    transform: rotate(45deg) translate(-7px, -6px);
  }

  @media screen and (min-width: 470px) {
    .hamburger {
      display: none;
      visibility: hidden;
      height: 0;
      padding: 0;
      margin: 0;
    }
  }
</style>

